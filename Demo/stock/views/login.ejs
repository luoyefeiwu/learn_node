  </div>
</div>

<script>
$("#changeSign").on("click",function(){
  $("#login").hide();
  $("#sign").show();
});
$("#changeLogin").on("click",function(){
  $("#sign").hide();
  $("#login").show();
});

$('.carousel').carousel({
  interval: 8000
})
</script>

